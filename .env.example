# Application

NODE_ENV=development
PORT=3000
APP_NAME="OpenLearn Backend"
APP_BASE_URL=http://localhost:3000


# Database Configuration

DATABASE_URL=url
POSTGRES_PASSWORD=password
POSTGRES_DB=openlearn_dev


# JWT Configuration

JWT_SECRET=jwtSecretKeyForOpenLearnApp123!
JWT_REFRESH_SECRET=refreshJwtSecret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d


# Redis Configuratio

REDIS_URL=redisurl
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=password


# CORS Configuration

CORS_ORIGIN=https://openlearn.org.in,http://localhost:5173


# Rate Limiting

RATE_LIMIT_WINDOW_MS=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_DEV=false


# File Upload Configuration

MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads


# Email Configuration

SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465
SMTP_USER=info@openlearn.org.in
SMTP_PASSWORD="password"
SMTP_SECURE=true
SMTP_FROM_NAME="OpenLearn Platform"
SMTP_FROM_EMAIL=info@openlearn.org.in
SMTP_REPLY_TO=info@openlearn.org.in
SMTP_PASS=password


# Additional Email Configuration

EMAIL_WORKER_CONCURRENCY=5
EMAIL_SUPPORT_EMAIL=info@openlearn.org.in
EMAIL_ADMIN_EMAIL=info@openlearn.org.in


# Logging

LOG_LEVEL=debug
# EMAIL_PROVIDER=mailtrap
EMAIL_PROVIDER=resend
RESEND_API_KEY=api
RESEND_FROM_EMAIL="OpenLearn Platform <info@openlearn.org.in>"

# Amazon SES Email Configuration

SES_REGION=eu-north-1
SES_ACCESS_KEY_ID=accesskeyid
SES_SECRET_ACCESS_KEY=secretaccesskey
SES_FROM_EMAIL="OpenLearn Platform <info@openlearn.org.in>"
SES_FROM_NAME="OpenLearn Platform"

# Monitoring Configuration
MONITORING_API_SECRET=monitoringapisecret

# Grafana Configuration (for Prometheus + Grafana monitoring stack)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-secure-password


MAILTRAP_API_TOKEN=maintrapapitoken
MAILTRAP_FROM_EMAIL="OpenLearn Platform <info@openlearn.org.in>"
MAILTRAP_FROM_NAME="OpenLearn Platform"


BACKUP_S3_BUCKET=ol-postgres-backup

# S3 region
BACKUP_S3_REGION=eu-north-1

# AWS credentials for backup (replace with your actual credentials)
BACKUP_AWS_ACCESS_KEY_ID=backupakid1234567890
BACKUP_AWS_SECRET_ACCESS_KEY=backupsecret

# Backup retention and settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=6
BACKUP_PREFIX=openlearn
