# Application
NODE_ENV=development
PORT=3000
APP_NAME=OpenLearn Backend

# Database Configuration
DATABASE_URL="postgresql://openlearn_user:openlearn_password@localhost:5432/openlearn_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=true
SMTP_FROM_NAME=OpenLearn Platform
SMTP_FROM_EMAIL=noreply@openlearn.org.in
SMTP_REPLY_TO=support@openlearn.org.in

# Email Service Configuration
EMAIL_QUEUE_NAME=openlearn-email-queue
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=5000
EMAIL_RATE_LIMIT_PER_HOUR=1000
EMAIL_RATE_LIMIT_PER_MINUTE=50
EMAIL_BATCH_SIZE=10

# Email Tracking
EMAIL_TRACK_OPENS=true
EMAIL_TRACK_CLICKS=true
EMAIL_WEBHOOK_SECRET=your-webhook-secret-for-email-events

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_MAX_MEMORY=512

# Logging
LOG_LEVEL=debug
